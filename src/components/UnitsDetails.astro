<style>
	/* Accordion Section Styles */
	.tabs-section {
		padding: 2rem 0;
	}

	.tabs-section h2 {
		text-align: center;
		font-size: 2rem;
		margin-bottom: calc(2rem * 1.5);
	}

	/* Tabs Navigation Styles */
	.tabs-nav {
		display: flex;
		flex-wrap: wrap;

		margin-bottom: 1rem;
	}

	.tab-link {
		background-color: var(--theme-primary);
		color: var(--theme-on-primary);
		cursor: pointer;
		padding: 0.5rem 1rem;
		border: none;
		margin-right: 0.5rem;
		margin-bottom: 0.5rem;

		border-radius: var(--theme-shape-radius);
		transition: background-color 0.3s;
	}

	.tab-link:hover {
		background-color: var(--theme-primary-hover);
	}

	.tab-link.active {
		background-color: #3a6060;
	}

	/* Tab Content Styles */
	/* Initial state for hidden tab contents */
	.tab-content {
		opacity: 0;
		visibility: hidden;
		transition:
			opacity 0.5s ease,
			visibility 0.5s ease;
		height: 0;
		overflow: hidden;
	}

	/* Visible tab content with smooth transition */
	.tab-content.active {
		opacity: 1;
		visibility: visible;
		height: auto;
		transition:
			opacity 0.5s ease,
			visibility 0.5s ease;
	}

	.unit-image {
		max-width: 300px;
		height: auto;
		margin-bottom: 1rem;
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
	}

	.unit-description {
		padding: 0 1rem;
		margin-bottom: 1rem;
	}

	.unit-header {
		margin-bottom: 1rem;
	}

	.unit-specifications {
		margin-top: 1rem;
	}

	.unit-info-table {
		width: 100%;
		border-collapse: collapse;
	}

	.unit-info-table th,
	.unit-info-table td {
		padding: 0.5rem;
		border-bottom: 1px solid #ddd;
		text-align: left;
	}

	.unit-info-table th {
		width: 60%;
		color: #666;
	}

	.unit-info-table td {
		font-weight: bold;
	}

	/* Responsive adjustments */
	@media (min-width: 768px) {
		.tab-container {
			display: grid;
			grid-template-columns: 1fr 3fr;
			gap: 1rem;
		}

		.unit-description h3 {
			font-size: 1.5em;
		}
	}
</style>
